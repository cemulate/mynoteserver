{
  "name": "mynoteserver",
  "version": "0.3.6",
  "description": "Simple self-hosted note-taking using markdown with first-class support for math and inline drawings",
  "author": "Chase Meadors",
  "scripts": {
    "development": "NODE_ENV=development nodemon -L --ignore src --ignore notes --inspect=0.0.0.0 server/server.mjs -- -p 8080 -h '0.0.0.0' -d `pwd`/notes",
    "build": "webpack --mode production"
  },
  "bin": {
    "mynoteserver": "server/server.mjs"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@codemirror/commands": "^6.0.0",
    "@codemirror/lang-markdown": "^6.0.0",
    "@codemirror/search": "^6.0.0",
    "babel-loader": "^8.2.5",
    "bulma": "^0.9.4",
    "codemirror": "^6.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "fastify-webpack-hmr": "^3.0.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "nodemon": "^2.0.16",
    "reveal.js": "^4.3.1",
    "sass": "^1.52.1",
    "sass-loader": "^13.0.0",
    "style-loader": "^3.3.1",
    "url-loader": "^4.1.1",
    "vue": "^3.2.36",
    "vue-loader": "^17.0.0",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0"
  },
  "dependencies": {
    "@fastify/static": "^5.0.2",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "date-fns": "^2.28.0",
    "fastify": "^3.29.0",
    "highlight.js": "^11.5.1",
    "markdown-it": "^13.0.1",
    "markdown-it-math": "^4.1.1"
  }
}
